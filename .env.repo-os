# Repository-OS Environment Configuration
# This file defines the complete development environment for MCP v2

# Base Configuration
COMPOSE_PROJECT_NAME=mcp-v2-repo-os
COMPOSE_FILE=docker-compose.yml:docker-compose.dev.yml

# Repository OS Settings
REPO_OS_VERSION=2025.1
WORKSPACE_ROOT=/workspace
USER_ID=1000
GROUP_ID=1000

# Development Languages & Runtimes
NODE_VERSION=20.11.0
JAVA_VERSION=21
PYTHON_VERSION=3.12
GO_VERSION=1.21
RUST_VERSION=1.75

# Database Configuration
POSTGRES_VERSION=16
POSTGRES_DB=mcp_v2_repo
POSTGRES_USER=mcp_dev
POSTGRES_PASSWORD=repo_dev_2025
POSTGRES_HOST=postgres-repo-os

# Redis Configuration  
REDIS_VERSION=7.2
REDIS_PASSWORD=repo_redis_2025
REDIS_HOST=redis-repo-os

# Monitoring Stack
PROMETHEUS_VERSION=latest
GRAFANA_VERSION=latest
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=repo_admin_2025

# Message Queue
RABBITMQ_VERSION=3.12-management
RABBITMQ_DEFAULT_USER=mcp_queue
RABBITMQ_DEFAULT_PASS=queue_2025

# Container Registry (for repo-internal images)
REGISTRY_VERSION=2.8
REGISTRY_PORT=5000

# Development Tools
NGINX_VERSION=1.25-alpine
CADDY_VERSION=2.7-alpine

# Security & Authentication
JWT_SECRET=mcp_v2_repo_jwt_secret_2025
ENCRYPTION_KEY=mcp_v2_repo_encryption_key_2025

# Networking
REPO_NETWORK=mcp-v2-repo-net
EXTERNAL_PORT_BASE=8000

# Volume Mounts
REPO_VOLUMES_ROOT=./volumes
REPO_CACHE_ROOT=./cache
REPO_LOGS_ROOT=./logs

# Build Configuration
BUILDKIT_ENABLED=1
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
