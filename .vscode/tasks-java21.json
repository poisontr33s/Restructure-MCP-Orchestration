{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Java 21 MCP System",
      "type": "shell",
      "command": "mvn",
      "args": ["clean", "install", "-Dmaven.compiler.source=21", "-Dmaven.compiler.target=21"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "env": {
          "MAVEN_OPTS": "--enable-preview"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "Start Java 21 MCP Core",
      "type": "shell",
      "command": "mvn",
      "args": ["spring-boot:run", "-pl", "mcp-core"],
      "group": "build",
      "isBackground": true,
      "options": {
        "env": {
          "MAVEN_OPTS": "--enable-preview",
          "SPRING_PROFILES_ACTIVE": "dev"
        }
      },
      "dependsOn": "Build Java 21 MCP System",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Java 21 MCP CLI Status",
      "type": "shell",
      "command": "mvn",
      "args": ["exec:java", "-pl", "mcp-cli", "-Dexec.args=status -v"],
      "group": "test",
      "options": {
        "env": {
          "MAVEN_OPTS": "--enable-preview"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Captain Guthilda Fleet Status",
      "type": "shell",
      "command": "mvn",
      "args": ["exec:java", "-pl", "mcp-cli", "-Dexec.args=guthilda --fleet"],
      "group": "test",
      "options": {
        "env": {
          "MAVEN_OPTS": "--enable-preview"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Test Java 21 MCP System",
      "type": "shell",
      "command": "mvn",
      "args": ["test", "-Dmaven.compiler.source=21", "-Dmaven.compiler.target=21"],
      "group": "test",
      "options": {
        "env": {
          "MAVEN_OPTS": "--enable-preview"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "Package Java 21 MCP System",
      "type": "shell",
      "command": "mvn",
      "args": [
        "clean",
        "package",
        "-DskipTests",
        "-Dmaven.compiler.source=21",
        "-Dmaven.compiler.target=21"
      ],
      "group": "build",
      "options": {
        "env": {
          "MAVEN_OPTS": "--enable-preview"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Java 21 Copilot Demo",
      "type": "shell",
      "command": "echo",
      "args": [
        "üè¥‚Äç‚ò†Ô∏è Captain Guthilda's Java 21 fleet is ready for GitHub Copilot enhancement! Virtual threads sailing, pattern matching sharp! ‚öì"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
