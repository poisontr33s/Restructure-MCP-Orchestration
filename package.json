{
  "name": "mcp-orchestration-system",
  "version": "1.0.0",
  "private": true,
  "description": "Modern MCP Orchestration System for 2025",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "prepare": "husky install",
    "start": "node packages/cli/dist/index.js start",
    "clean": "pnpm clean:all",
    "clean:all": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf packages/*/dist && rm -rf pnpm-lock.yaml",
    "branch-manager": "./scripts/universal-branch-manager.sh",
    "branch-manager:list": "./scripts/universal-branch-manager.sh --operation list",
    "branch-manager:dry-run": "./scripts/universal-branch-manager.sh --operation dry-run",
    "branch-manager:cleanup": "./scripts/universal-branch-manager.sh --operation cleanup",
    "branch-manager:cleanup-force": "./scripts/universal-branch-manager.sh --operation cleanup --force",
    "branch-manager:copilot": "./scripts/universal-branch-manager.sh --operation list --pattern 'copilot/*'",
    "branch-manager:copilot-cleanup": "./scripts/universal-branch-manager.sh --operation cleanup --pattern 'copilot/*'",
    "guthilda": "node packages/guthilda/dist/cli.mjs",
    "guthilda:status": "pnpm guthilda status",
    "guthilda:auth": "pnpm guthilda auth setup",
    "guthilda:orchestrate": "pnpm guthilda orchestrate",
    "guthilda:discover": "pnpm guthilda discover",
    "guthilda:cleanup": "pnpm guthilda cleanup",
    "guthilda:report": "pnpm guthilda report",
    "guthilda:claude-code": "pnpm guthilda claude-code",
    "claude-code-check": "./scripts/claude-code-checker.sh",
    "claude-code-check:report": "./scripts/claude-code-checker.sh --operation report",
    "gemini:scout": "node scripts/gemini-scout.js",
    "gemini:cli": "node scripts/gemini-cli.js",
    "gemini:assistant": "node scripts/gemini-code-assistant.js",
    "gemini:chat": "node scripts/gemini-cli.js chat",
    "gemini:analyze": "node scripts/gemini-cli.js analyze",
    "gemini:code": "node scripts/gemini-cli.js code",
    "gemini:liberate": "pnpm install && pnpm gemini:scout",
    "ai:triad": "echo 'Claude (Strategy) + Copilot (Tactics) + Gemini (Intelligence) = AI Excellence'",
    "ai:gemini": "pnpm gemini:cli help",
    "ai:gemini:full": "echo 'Gemini CLI (Official-style) + Code Assistant (IDE-style) + Scout (Intelligence)'"
  },
  "keywords": [
    "mcp",
    "orchestration",
    "microservices",
    "vscode"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@google/generative-ai": "^0.24.1",
    "@ai-sdk/google": "^2.0.8",
    "@google/genai": "^1.15.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.0.11",
    "lint-staged": "^16.1.2",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "turbo": "^2.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": "eslint --fix",
    "*.{js,ts,tsx,jsx,md,json}": "prettier --write"
  }
}
