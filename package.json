{
  "name": "mcp-orchestration-system",
  "version": "1.0.0",
  "private": true,
  "description": "Modern MCP Orchestration System for 2025",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build:gemini-cli-ext": "pnpm --dir ./.vscode/extensions/gemini-ide-helper run build",
    "watch:gemini-cli-ext": "pnpm --dir ./.vscode/extensions/gemini-ide-helper run watch",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "prepare": "husky install",
    "start": "node packages/cli/dist/index.js start",
    "clean": "pnpm clean:all",
    "clean:all": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf packages/*/dist && rm -rf pnpm-lock.yaml",
    "mcp:status": "pnpm exec mcp status",
    "start:autonomous": "pnpm exec mcp autonomous"
  },
  "keywords": [
    "mcp",
    "orchestration",
    "microservices",
    "vscode"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@mcp/cli": "workspace:*",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "glob": "^11.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^16.1.2",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "turbo": "^2.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": "eslint --fix",
    "*.{js,ts,tsx,jsx,md,json}": "prettier --write"
  },
  "dependencies": {
    "@google/genai": "^1.13.0",
    "express": "^5.1.0",
    "mime": "^4.0.7"
  }
}
