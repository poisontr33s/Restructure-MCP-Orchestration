# Java-First Development Environment Configuration
# Captain Guthilda's MCP Orchestration System - Java 21 Edition
# üè¥‚Äç‚ò†Ô∏è Optimized for Java monorepo development

# =================================================================
# COMPOSE CONFIGURATION
# =================================================================
COMPOSE_PROJECT_NAME=mcp-java-orchestration
COMPOSE_FILE=docker-compose.java-dev.yml

# =================================================================
# JAVA DEVELOPMENT ENVIRONMENT
# =================================================================
JAVA_VERSION=21
MAVEN_VERSION=3.9.6
GRADLE_VERSION=8.5

# Polyglot Language Support (within container)
GO_VERSION=1.21.6
PYTHON_VERSION=3.12
NODE_VERSION=20.11.0
RUST_VERSION=1.75

USER_ID=1000
GROUP_ID=1000

# JVM Performance Settings (for development containers)
JAVA_OPTS=-Xmx4g -XX:+UseG1GC -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0
MAVEN_OPTS=-Xmx2g -XX:+TieredCompilation -XX:TieredStopAtLevel=1
GRADLE_OPTS=-Xmx2g -XX:+UseG1GC -Dorg.gradle.daemon=true -Dorg.gradle.parallel=true

# =================================================================
# SPRING BOOT CONFIGURATION
# =================================================================
SPRING_PROFILES_ACTIVE=dev,docker
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_MCPORCHESTRATION=DEBUG

# =================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =================================================================
POSTGRES_VERSION=16
POSTGRES_DB=mcp_orchestration
POSTGRES_USER=mcp_dev
POSTGRES_PASSWORD=java_dev_2025
POSTGRES_PORT=5432

# Database connection settings for Spring Boot
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/mcp_orchestration
SPRING_DATASOURCE_USERNAME=mcp_dev
SPRING_DATASOURCE_PASSWORD=java_dev_2025
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# JPA/Hibernate settings
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# =================================================================
# REDIS CONFIGURATION (Cache & Sessions)
# =================================================================
REDIS_VERSION=7.2
REDIS_PASSWORD=java_redis_2025
REDIS_PORT=6379

# Redis connection settings for Spring Boot
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=java_redis_2025
SPRING_REDIS_TIMEOUT=2000ms

# =================================================================
# MONITORING & OBSERVABILITY
# =================================================================
PROMETHEUS_VERSION=latest
PROMETHEUS_PORT=9090

GRAFANA_VERSION=latest
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=java_admin_2025

ZIPKIN_VERSION=latest
ZIPKIN_PORT=9411

# Actuator settings for Spring Boot
MANAGEMENT_SERVER_PORT=8090
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always
MANAGEMENT_ENDPOINT_METRICS_ENABLED=true
MANAGEMENT_ENDPOINT_PROMETHEUS_ENABLED=true

# =================================================================
# CODE QUALITY & ANALYSIS
# =================================================================
SONARQUBE_VERSION=community
SONARQUBE_PORT=9000

NEXUS_VERSION=latest
NEXUS_PORT=8081

# =================================================================
# EMAIL TESTING
# =================================================================
MAILHOG_VERSION=latest
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# Email settings for Spring Boot
SPRING_MAIL_HOST=mailhog
SPRING_MAIL_PORT=1025
SPRING_MAIL_USERNAME=
SPRING_MAIL_PASSWORD=
SPRING_MAIL_PROPERTIES_MAIL_SMTP_AUTH=false
SPRING_MAIL_PROPERTIES_MAIL_SMTP_STARTTLS_ENABLE=false

# =================================================================
# API GATEWAY & LOAD BALANCER
# =================================================================
NGINX_VERSION=alpine

# =================================================================
# NETWORK CONFIGURATION
# =================================================================
MCP_NETWORK=mcp-java-net

# =================================================================
# AI/ML INTEGRATION SETTINGS
# =================================================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Spring AI Configuration
SPRING_AI_OPENAI_CHAT_ENABLED=true
SPRING_AI_OPENAI_EMBEDDING_ENABLED=true

# =================================================================
# SECURITY SETTINGS
# =================================================================
# JWT Configuration
JWT_SECRET=mcp_java_jwt_secret_2025_development_only
JWT_EXPIRATION=86400000

# OAuth2 Settings (for development)
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GITHUB_CLIENT_ID=your_github_client_id
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GITHUB_CLIENT_SECRET=your_github_client_secret

# =================================================================
# DEVELOPMENT PORTS (for all Spring Boot modules)
# =================================================================
# Core MCP Services
MCP_CORE_PORT=8080
MCP_MONITOR_PORT=8081
MCP_GUTHILDA_PORT=8082
MCP_AI_INTEGRATION_PORT=8083
MCP_SERVERS_PORT=8084
MCP_CLI_PORT=8085

# Debug Ports (for remote debugging)
MCP_CORE_DEBUG_PORT=5005
MCP_MONITOR_DEBUG_PORT=5006
MCP_GUTHILDA_DEBUG_PORT=5007
MCP_AI_INTEGRATION_DEBUG_PORT=5008

# =================================================================
# TESTING CONFIGURATION
# =================================================================
# Test profiles
SPRING_PROFILES_TEST=test,h2

# Test database (H2 in-memory for fast tests)
SPRING_TEST_DATABASE_REPLACE=any
SPRING_DATASOURCE_TEST_URL=jdbc:h2:mem:testdb
SPRING_DATASOURCE_TEST_DRIVER_CLASS_NAME=org.h2.Driver
SPRING_JPA_TEST_HIBERNATE_DDL_AUTO=create-drop

# =================================================================
# PERFORMANCE TUNING
# =================================================================
# Connection pool settings
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=20
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=20000
SPRING_DATASOURCE_HIKARI_IDLE_TIMEOUT=300000

# Thread pool settings
SPRING_TASK_EXECUTION_POOL_CORE_SIZE=8
SPRING_TASK_EXECUTION_POOL_MAX_SIZE=16
SPRING_TASK_EXECUTION_POOL_QUEUE_CAPACITY=100
