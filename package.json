{
  "name": "mcp-orchestration-system",
  "version": "1.0.0",
  "private": true,
  "description": "Modern MCP Orchestration System for 2025",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "prepare": "husky install",
    "start": "node packages/cli/dist/index.js start",
    "clean": "pnpm clean:all",
    "clean:all": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf packages/*/dist && rm -rf pnpm-lock.yaml",
    "cleanup-branches": "scripts/cleanup-branches.sh",
    "cleanup-branches:dry": "scripts/cleanup-branches.sh --dry-run",
    "cleanup-branches:force": "scripts/cleanup-branches.sh --force",
    "universal-cleanup": "scripts/universal-branch-manager.sh",
    "universal-cleanup:dry": "scripts/universal-branch-manager.sh --dry-run",
    "universal-cleanup:all": "scripts/universal-branch-manager.sh --operation cleanup --repositories ALL",
    "universal-list": "scripts/universal-branch-manager.sh --operation list --repositories ALL",
    "cross-repo:init": "scripts/cross-repo-bridge.sh init",
    "cross-repo:validate": "scripts/cross-repo-bridge.sh validate",
    "cross-repo:sync": "scripts/cross-repo-bridge.sh sync",
    "cross-repo:build": "scripts/cross-repo-bridge.sh build",
    "pre-merge-check": "scripts/cross-repo-bridge.sh validate",
    "universal:analyze": "scripts/universal-automation.sh analyze",
    "universal:install": "scripts/universal-automation.sh install", 
    "universal:build": "scripts/universal-automation.sh build",
    "universal:test": "scripts/universal-automation.sh test",
    "universal:lint": "scripts/universal-automation.sh lint",
    "universal:all": "scripts/universal-automation.sh all"
  },
  "keywords": [
    "mcp",
    "orchestration",
    "microservices",
    "vscode"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.0.11",
    "lint-staged": "^16.1.2",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "turbo": "^2.0.0",
    "typescript": "5.9.1-rc",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": "eslint --fix",
    "*.{js,ts,tsx,jsx,md,json}": "prettier --write"
  }
}
